<div class="container p-6 mx-auto">
<h1 class="text-3xl font-bold text-center my-8" style="margin-top: -2rem;">Borrower</h1>

<div class="container mx-auto mt-8 px-4">
  <table class="min-w-full bg-white border rounded-lg shadow-md">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Name</th>
      </tr>
    </thead>
    <tbody>
      <% @borrowers.each do |borrower| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-6 py-4 text-gray-800 font-semibold">
            <%= link_to borrower.name, borrower_path(borrower), class: "text-blue-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
