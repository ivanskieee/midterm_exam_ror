<%= form_with model: @borrowing, html: { class: "form-container" } do |form| %>
  <div class="form-group">
    <%= form.label :borrower_id, class: "form-label" %>
    <%= form.collection_select :borrower_id, Borrower.all, :id, :name, {}, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :book_id, class: "form-label" %>
    <%= form.collection_select :book_id, Book.all, :id, :title, {}, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :borrowed_on, class: "form-label" %>
    <%= form.date_field :borrowed_on, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :returned_on, class: "form-label" %>
    <%= form.date_field :returned_on, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit", class: "submit-btn" %>
  </div>
<% end %>

<style>
  .form-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 400px; 
    margin: 0 auto;    
    padding: 20px;
  }

  .form-group {
    margin-bottom: 20px;
    text-align: center;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .form-label {
    display: inline-block;
    text-align: left;  
    width: 100%; 
    margin-bottom: 8px;  
  }

  .submit-btn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
  }

  .submit-btn:hover {
    background-color: #45a049;  
  }
</style>
