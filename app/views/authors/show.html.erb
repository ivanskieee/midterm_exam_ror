<div class="container p-6 mx-auto">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Author: <%= @author.name %></h1>

  <div class="container mx-auto mt-8">
    <table class="min-w-full bg-white border rounded-lg shadow-md">
      <thead>
        <tr>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Books</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="px-6 py-4 border-b">
            <ul class="list-disc pl-6">
              <% @author.books.each do |book| %>
                <li class="mb-2">
                  <%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %>
                </li>
              <% end %>
            </ul>
            <br>
            <div class="mt-6">
              <ul class="space-y-2">
                <li>
                  <%= link_to "Edit", edit_author_path(@author), class: "text-yellow-500 hover:underline" %>
                </li>
                <li>
                  <%= link_to "Destroy", author_path(@author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
